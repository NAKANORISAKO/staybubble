			<div class="folder-container">
				<% @folders.each do |f| %>

			

					<div class="folder-box">
						<%= link_to folder_path(f.id) do %>
							<div class="folder">
								<p class="foldername"><%= f.folder_name %></p>
							</div>
						<% end %>
					
						<div class="btn2-box">
								<%= link_to edit_folder_path(f.id) do %>
									<div class= "btn2"><i class="fas fa-pen"></i></div>
								<% end %>

								<%= link_to folder_path(f.id), method: :delete do %>
								<div  class= "btn2"><i class="fas fa-trash-alt"></i></div>		
								<% end %>	 
						</div>
					</div>
				<% end %>
			</div>


		
		<div class="btn3-box">
			<%= link_to new_folder_path do %>
				<div  class= "btn3"><i class="fas fa-plus"></i></div>		
			<% end %>	
		</div>

		


	</div>

