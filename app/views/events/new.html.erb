
<header class="site-header flex flex--bet">
   
<nav class="gnav">
		<div class="gnav__menu flex flex--bet">
			<div class="left-box">
				<%= link_to "STAYbubbles", root_path, class: "gnav__menu__logo"  %>
			</div>
			<div class="right-box">
					<div class="gnav__menu__item">
					<%= link_to "新規投稿へ", new_bubble_path, class: "gnav__menu__item__link"  %>
					</div>
					<div class="gnav__menu__item">
					<%= link_to "マイページ", user_path(current_user.id), class: "gnav__menu__item__link"  %>
					</div>
					<div class="gnav__menu__item">
					<%= link_to "フォルダ一覧", folders_path, class: "gnav__menu__item__link" %>
					</div>
					<div class="gnav__menu__item">
					<%= link_to "イベント", events_path, class: "gnav__menu__item__link" %>
					</div>
					<div class="gnav__menu__item">
					<%= link_to "Bubble一覧に戻る", bubbles_path, class: "gnav__menu__item__link" %>
					</div>
			</div>
		</div>
</nav>
</header>



<div class="event-add-box">
	<div class="event-add">
		<%= form_with(model: @event, local: true) do |form| %>

			<div class="mark">
				<%= form.select :mark, [["誕生日", "誕生日"], ["TV/ラジオ", "TV/ラジオ"],["発売日", "発売日"],["コンサート", "コンサート"],["デビュー日", "デビュー日"]], include_blank: "イベント選択" %>
			</div>

			<div class="title">
				<%= form.label :title %>
				<br>
				<%= form.text_field :title %>
			</div>

			<div class="time">
				<%= form.label :start_time %>
				<br>
				<%= form.datetime_select :start_time %>
			</div>


			<div class="field">
					<%= form.text_area :content, class: "content", :size => "50×10" %>
					<%= form.label :content %>
				</div>

			
			<div class="submit">
				<%= form.submit %>
			</div>
		<% end %>
	</div>
</div>
